<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todolistapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_to_do_list"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_to_do_list"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoListApp">

        <activity
            android:name=".activitys.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.ListingScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.DetailScreen"
            android:screenOrientation="portrait" />
    </application>

</manifest>